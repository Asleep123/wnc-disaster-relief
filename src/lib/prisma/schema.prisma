generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Category {
  SHARING_RESOURCES
  REQUEST_FOR_HELP
}

model User {
  id        String    @id @unique
  email     String    @unique
  username  String
  firstName String?
  lastName  String?
  posts     Post[]
  Comment   Comment[]
}

model Post {
  id     String @unique
  author User   @relation(fields: [userId], references: [id])
  userId String

  content  String
  category Category
  Comment  Comment[]
}

model Comment {
  id Int @unique @default(autoincrement())

  post   Post   @relation(fields: [postId], references: [id])
  postId String

  author User   @relation(fields: [userId], references: [id])
  userId String
}
